# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /payments                     payments.PaymentController.findAll(page: Option[Int])
POST    /payments                     payments.PaymentController.create
GET     /payments/:id                 payments.PaymentController.findById(id: String)
DELETE  /payments/:id                 payments.PaymentController.deleteById(id: String)

POST   /seed                     common.DevController.seed

#GET     /accounts                     budgets.AccountController.findAll
#POST    /accounts                     budgets.AccountController.create
#GET     /accounts/:id                 budgets.AccountController.findById(id: Long)
#DELETE  /accounts/:id                 budgets.AccountController.deleteById(id: Long)

GET   /accounts/:id/payments          budgets.AccountController.findPayments(id: String, page: Option[Int])

GET     /budgets                     budgets.BudgetController.findAll(page: Option[Int])
POST    /budgets                     budgets.BudgetController.create
GET     /budgets/:id                 budgets.BudgetController.findById(id: String)
DELETE  /budgets/:id                 budgets.BudgetController.deleteById(id: String)

PATCH    /budgets/:id/investors       budgets.BudgetController.updateInvestors(id: String)

GET     /users                      users.UserController.findAll

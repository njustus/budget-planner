# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /payments                     controllers.PaymentController.findAll
POST    /payments                     controllers.PaymentController.create
GET     /payments/:id                 controllers.PaymentController.findById(id: Long)
DELETE  /payments/:id                 controllers.PaymentController.deleteById(id: Long)

POST   /seed                     controllers.PaymentController.test


GET     /accounts                     controllers.AccountController.findAll
POST    /accounts                     controllers.AccountController.create
GET     /accounts/:id                 controllers.AccountController.findById(id: Long)
DELETE  /accounts/:id                 controllers.AccountController.deleteById(id: Long)


GET     /budgets                     controllers.BudgetController.findAll
POST    /budgets                     controllers.BudgetController.create
GET     /budgets/:id                 controllers.BudgetController.findById(id: Long)
DELETE  /budgets/:id                 controllers.BudgetController.deleteById(id: Long)

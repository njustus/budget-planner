# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /payment                     controllers.PaymentController.findAll
POST    /payment                     controllers.PaymentController.create
GET     /payment/:id                 controllers.PaymentController.findById(id: Long)
DELETE  /payment/:id                 controllers.PaymentController.deleteById(id: Long)

POST   /seed                     controllers.PaymentController.test


GET     /account                     controllers.AccountController.findAll
POST    /account                     controllers.AccountController.create
GET     /account/:id                 controllers.AccountController.findById(id: Long)
DELETE  /account/:id                 controllers.AccountController.deleteById(id: Long)
